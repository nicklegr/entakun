.navbar.navbar-inverse.navbar-fixed-top
  .navbar-inner
    .container
      #project-name
        .name.brand entakun
        .edit{ style: "display: none;" }
          %img.edit_button{ src: url_for('/img/pencil.png') }

      %form#show_trashes.navbar-form.pull-right
        %label.checkbox
          %input#show_trashes_check{ type: "checkbox" } 完了を表示

.container
  #add-task
    %input#task{ type: 'text', placeholder: 'タスクを追加' }

  .row
    .span5
      #incoming-tasks
        %ul#tasks.sortable
          %li#task-template.task.ui-state-default{ style: 'display: none;' }
            .name (タスク内容)
            .edit{ style: "display: none;" }
              %img.edit_button{ src: url_for('/img/pencil.png') }
            .delete{ style: "display: none;" }
              %img.edit_button{ src: url_for('/img/cancel.png') }

    .span5
      #staff-container
        #staffs
          .staff#staff-template{ style: 'display: none;' }
            .staff-name
              .name (スタッフ名)
              .edit{ style: "display: none;" }
                %img.edit_button{ src: url_for('/img/pencil.png') }
              .delete{ style: "display: none;" }
                %img.edit_button{ src: url_for('/img/cancel.png') }
            %ul.assigned-task.sortable

        .add-staff
          %a#add-staff
            %img.edit_button{ src: url_for('/img/add.png') }
            追加

    .span1
      #trashbox
        %img#trashbox-img{ src: url_for('/img/TrashBox_Closed.png') }

  :javascript
    var project_key = "#{@project_key}";
